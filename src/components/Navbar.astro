---
import Logo from "./Logo.astro";
const navigationLinks = [
  { name: "Home", href: "/" },
  { name: "Projects", href: "/projects" },
  { name: "Contact", href: "mailto:ore@usefusion.app" },
];
type Props = {};
const {} = Astro.props;
---

<header
  class="absolute top-0 left-0 right-0 w-full p-4 z-10 flex justify-between items-center max-w-8xl mx-auto"
>
  <Logo className="w-32 h-14 md:w-52 md:h-24" />
  <nav class="md:flex items-center justify-between hidden">
    {
      navigationLinks.map((link) => (
        <a
          href={link.href}
          class="text-white mx-4 text-xl font-medium hover:underline"
        >
          {link.name}
        </a>
      ))
    }
  </nav>
</header>
